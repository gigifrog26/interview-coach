# Interview Coach System Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=Interview Coach System
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# LLM Provider API Keys
# Get these from your respective provider accounts
DEEPSEEK_API_KEY=your_deepseek_api_key_here
QWEN_API_KEY=your_qwen_api_key_here

# Database Configuration (if using external database)
DATABASE_URL=sqlite:///data/interview_coach.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20


# Storage Configuration
STORAGE_BASE_PATH=data
STORAGE_BACKUP_ENABLED=true
STORAGE_BACKUP_RETENTION_DAYS=30

# Security Settings
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
PASSWORD_SALT=your_password_salt_here_change_in_production

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
HEALTH_CHECK_INTERVAL_SECONDS=300

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - [%(correlation_id)s] - %(message)s
LOG_FILE=data/logs/interview_coach.log
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Feature Flags
FEATURE_LLM_FALLBACK=true
FEATURE_SESSION_RECOVERY=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_RATE_LIMITING=true
